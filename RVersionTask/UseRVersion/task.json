{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "4c99d257-4d1e-4e04-b4c1-a71cb74d6204",
    "name": "UseRVersion",
    "friendlyName": "Use R Version",
    "description": "Task to use specified version of R",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "t-jedel@microsoft.com",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 2
    },
    "instanceNameFormat": "Use R $(rVersionSpec)",
    "inputs": [
        {
            "name": "rVersionSpec",
            "type": "string",
            "label": "Version spec",
            "defaultValue": "3.x",
            "required": true,
            "helpMarkDown": "Version of R.Project to use"
        },
        {
            "name": "addToPath",
            "type": "boolean",
            "label": "Add to PATH",
            "required": false,
            "defaultValue": "true",
            "helpMarkDown": "Whether to add the R installation to the PATH environment variable to make it available in subsequent tasks or scripts without using the output variable."
        }
    ],
    "execution": {
        "Node10": {
            "target": "index.js"
        }
    }
}